<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:text="Venue"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/mainLite"
                android:textSize="18sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_venue"
                android:text="Stadium name"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_location"
                android:text="Stadium name"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_stage"
                android:text="Stadium name"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_attendance"
                android:text="Stadium name"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:text="Weather"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/mainLite"
                android:textSize="18sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_humidity"
                    android:text=""
                    android:textStyle="bold"
                    android:drawableStart="@drawable/humidity"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/qwc"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_temp_celsius"
                    android:text=""
                    android:textStyle="bold"
                    android:drawableStart="@drawable/thermometer"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/qwc"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_temp_farenheit"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="@font/qwc"
                    android:drawableStart="@drawable/cloudy"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_wind_speed"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="@font/qwc"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/wind" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView_description"
                android:text="Stadium name"
                android:textStyle="bold"
                android:fontFamily="@font/qwc"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_home"
                    android:scaleType="centerCrop"
                    android:layout_width="70dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/textView_home_formation"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/qwc"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_away"
                    android:scaleType="centerCrop"
                    android:layout_width="70dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/textView_away_formation"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/qwc"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>