<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_groupName"
            android:text="Teams"
            android:textColor="@color/mainDeep"
            android:textStyle="normal"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="MP"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="W"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="L"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="P"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="GF"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="GA"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:text="GD"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/mainDeep"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_standings_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>